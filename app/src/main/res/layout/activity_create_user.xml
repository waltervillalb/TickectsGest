<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateUserActivity"
    android:background="@drawable/background_login">


    <TextView
        android:id="@+id/tv_textView"
        style="@style/TituloCreateUser"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/carme"
        android:text="@string/createUser_titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/tv_text_createUser"
        style="@style/subtitulo_createUser"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carme"
        android:text="@string/text_subtitle_createUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_textView"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titulo_nameCreateUser"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:hint="@string/name_createUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_createUser">

        <EditText
            android:id="@+id/text_NamesCreateUser"
            android:layout_width="350dp"
            android:layout_height="44dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titulo_apellidoCreateUser"
        style="@style/text_input_name"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:hint="@string/apel_createUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_nameCreateUser">

        <EditText
            android:id="@+id/text_ApellidoCreateUser"
            android:layout_width="350dp"
            android:layout_height="44dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titulo_fechaNac"
        style="@style/text_input_name"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="false"
        android:hint="@string/FechaNac_createUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_apellidoCreateUser">

        <EditText
            android:id="@+id/text_fechCreateUser"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:inputType="date"
            android:maxLines="1"
            android:clickable="true"
            android:focusable="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titulo_Genero"
        style="@style/text_input_name"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:hint="@string/Genero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_fechaNac">
        <EditText
            android:id="@+id/text_GeneroCreateUser"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titulo_celular"
        style="@style/text_input_name"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:hint="@string/createUser_celular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_Genero">

        <EditText
            android:id="@+id/text_NumeroCeluluarCreateUser"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titulo_correo"
        style="@style/text_input_name"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:hint="@string/correo_email_createUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_celular">

        <EditText
            android:id="@+id/text_EmailCreateUser"
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titulo_passw1"
        style="@style/text_input_name"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginTop="15dp"
        android:hint="@string/contra2_email_createUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_correo">

        <EditText
            android:id="@+id/text_PasswordCreateUser"
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.gms.common.SignInButton
        android:id="@+id/botn_google"
        style="@style/btn_google"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_createUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_passw1"
        app:layout_constraintVertical_bias="0.878"></com.google.android.gms.common.SignInButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_createUser"
        style="@style/botones"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_createU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botn_google"
        app:layout_constraintVertical_bias="0.825">

    </androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>